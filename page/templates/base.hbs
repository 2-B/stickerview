<!DOCTYPE html>
{% load static %}
<html lang="de">
    <head>
        <title>Stickerview</title>
        <meta charset="utf-8" />

        <meta name="viewport"
              content="width=device-width, initial-scale=1" />
        <meta name="description"
              content="Chaostreff Bern Sticker Exchange" />
        <meta name="author"
              content="webmaster <bern@chaostreff.ch>" />

        <!-- Bootstrap core CSS -->
        <link href="{% static "css/bootstrap.min.css" %}"
              rel="stylesheet" />
        <link href="{% static "css/bootstrap-theme.min.css" %}"
              rel="stylesheet" />
        <link href="{% static "css/font-awesome.min.css" %}"
              rel="stylesheet" />
        <link href="{% static "css/blueimp-gallery.min.css" %}"
              rel="stylesheet" />
        <link href="{% static "css/style.css" %}"
              rel="stylesheet" />
        {% block header %}
        {% endblock %}
    </head>

    <body>
        <div class="row">
            <!-- Static navbar -->
            <div class="navbar navbar-default navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="/">
                            <b>Stickerview</b>
                        </a>
                    </div>
                    <form class="navbar-form navbar-right">
                        <div class="form-group">
                            <label class="sr-only"
                                   for="StickerSearch">
                                Sticker Search
                            </label>
                            <div class="input-group">
                                <input type="text"
                                       class="form-control"
                                       placeholder="Search" />
                                <span class="input-group-btn">
                                    <button type="submit"
                                            class="btn btn-default">
                                        Search
                                    </button>
                                </span>
                            </div>
                        </div>
                    </form>
                </div><!-- /.container -->
            </div>
        </div>

        <div class="container">
            {% block content %}
            {% endblock %}
        </div> <!-- /container -->

        <!-- JavaScript includes -->
        <script type="text/javascript"
                src="{% static "js/jquery.min.js" %}">
        </script>
        <script type="text/javascript"
                src="{% static "js/bootstrap.min.js" %}">
        </script>
        <script type="text/javascript"
                src="{% static "js/blueimp-helper.js" %}">
        </script>
        <script type="text/javascript"
                src="{% static "js/blueimp-gallery.min.js" %}">
        </script>
        {% block footer %}
        {% endblock %}
    </body>
</html>

